{
    "name": "connectFour",
    "version": "1.0.0",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "Mujavid Bukhari",
    "license": "ISC",
    "devDependencies": {
        "babel-cli": "^6.10.1",
        "babel-preset-es2015": "^6.9.0",
        "uglify-js": "^2.6.2"
    },
    "babel": {
        "minified": true,
        "shouldPrintComment": false,
        "presets": [
            "es2015"
        ]
    },
    "scripts": {
        "build" : "npm run build_js & npm run compile_sass",
        "build_js" : "babel es-js/gameBoard.js es-js/play.js es-js/interface.js -w -o js/connectFour.js",
        "compile_sass" : "sass --watch -t compressed scss/:css/",
        "compile_sass_once" : "sass -t compressed scss/main.scss css/main.css",
        "autoprefix_css" : "postcss --use autoprefixer css/main.css -d css/"
    }
}
